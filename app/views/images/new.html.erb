
<div id="signup_spacer"></div>

<div id="splash_box">
	<div id="upload_box">
		<%= form_for @image, :html => {:multipart => true} do |f| %>
			<%= f.file_field :image, class: "signup_input"%> <br />
			<%= f.hidden_field :uploaded_by, :value => current_user.id %>
			<%= f.hidden_field :uploader_name, :value => current_user.first_name.humanize %>
			<%= f.submit "Upload", class: "btn-submit" %>
		<% end %>
	</div>
</div>